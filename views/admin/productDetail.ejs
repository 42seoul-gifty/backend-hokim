<meta charset="UTF-8">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.css"/>
<script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>
<link href="/stylesheets/fSelect.css" rel="stylesheet">
<script src="/javascripts/fSelect.js"></script>

<style>
  table tr th{
    width: 100px;
  }

</style>
</head>
<body>
    <div class="container">
            <div id="content">
                <div style="margin: 3% auto; font-size: 20px; text-align: center;">상품수정</div>
                <table class="table table-hover">
                    <tr><th>상품코드</th><td><%= result[0].product_code %></td></tr>
                    <tr><th>카테고리</th><td><%= result[0].category %></td></tr>
                    <tr><th>브랜드</th><td><%= result[0].brand %></td></tr>
                    <tr><th>썸네일</th><td><img src=<%= result[0].thumbnail %> style="width:100px; height: 100px;"/></td></tr>
                    <tr><th>이미지</th><td>
                        <% let images = [] 
                        result.forEach((el)=>{ 
                              if (!images.includes(el.image_link)) {
                                images.push(el.image_link);
                            } 
                          })
                            images.forEach((image)=>{ %>
                              <img src=<%= image %> style="width:100px; height: 100px;"/>
                              <% })
                           %>  
                        </td> 
                    <tr><th>상품명</th><td><p onclick="window.open('<%= result[0].link %>')"><%= result[0].product_name %></p></td></tr>
                    <tr><th>상품소개</th><td><%= result[0].title %></td></tr>
                    <tr><th>상품정보제공고시</th><td>
                      <% if (result[0].sub_title!==null) { 
                        result[0].sub_title.split('<br>').forEach((el)=>{  %>
                          <%= el %><br>
                          <%  })
                       }%> 
                    </td></tr>
                    <tr><th>소비자가격</th><td><%= result[0].retail_price %></td></tr>
                    <tr><th>마진율</th><td><%= result[0].fee_rate %></td></tr>
                    <tr><th>노출수</th><td><%= result[0].exposure_count %></td></tr>
                    <tr><th>좋아요수</th><td><%= result[0].love_count %></td></tr>
                    <tr><th>주문수</th><td><%= result[0].order_count %></td></tr>
                    <tr><th>성별</th><td>
                      <% let genders = [] 
                        result.forEach((el)=>{ 
                              if (!genders.includes(el.gender)) {
                                genders.push(el.gender);
                            } 
                          })
                          genders.forEach((gender)=>{ %>
                              <%= gender %> 
                              <% })
                           %> 
                    </td></tr>
                      <tr><th>연령대</th><td>  
                        <% let ages = [] 
                        result.forEach((el)=>{ 
                              if (!ages.includes(el.age)) {
                                ages.push(el.age);
                            } 
                          })
                          ages.forEach((age)=>{ %>
                              <%= age %> 
                              <% })
                           %>
                      </td></tr>
                      <tr><th>금액대</th><td>
                        <% let prices = [] 
                        result.forEach((el)=>{ 
                              if (!prices.includes(el.price)) {
                                prices.push(el.price);
                            } 
                          })
                          prices.forEach((price)=>{ %>
                              <%= price %> 
                              <% })
                           %>
                      </td></tr>
                    </table>      
                    <button style="margin: 5% 40%;" type="button" class="btn btn-primary" onclick="location.href='https://gifty4u.com/admin/product/edit?product_code=<%= result[0].product_code %>';">수정하기</button>
            </div>
          </div>
  <script>
      
   </script>
</body>
</html>
