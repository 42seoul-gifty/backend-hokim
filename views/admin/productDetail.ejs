<meta charset="UTF-8">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.css"/>
<script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>
<link href="/stylesheets/fSelect.css" rel="stylesheet">
<script src="/javascripts/fSelect.js"></script>

<style>
  table tr th{
    width: 100px;
  }

</style>
</head>
<body>
    <div class="container">
            <div id="content">
                <div style="margin: 3% auto; font-size: 20px; text-align: center;">상품수정</div>
                <table class="table table-hover">
                    <tr><th>상품코드</th><td><%= product.id %></td></tr>
                    <tr><th>카테고리</th><td><%= product.category %></td></tr>
                    <tr><th>브랜드</th><td><%= product.brand %></td></tr>
                    <tr><th>썸네일</th><td><img src="<%= product.thumbnail%>" alt="thumbnail" style="width:100px; height: 100px;"/></td></tr>
                    <tr><th>이미지</th><td>
                        <% 
                          product.image_url.forEach((image)=>{ %>
                              <img src= "<%=image%>" alt="image" style="width:100px; height: 100px;"/>
                              <% })
                           %>  
                        </td> 
                    <tr><th>상품명</th><td><p onclick="window.open('<%= product.link %>')"><%= product.name %></p></td></tr>
                    <tr><th>상품소개</th><td><%= product.description %></td></tr>
                    <tr><th>상품정보제공고시</th><td>
                      <% if (product.detail!==null) { 
                        product.detail.split('<br>').forEach((el)=>{  %>
                          <%= el %><br>
                          <%  })
                       }%> 
                    </td></tr>
                    <tr><th>소비자가격</th><td><%= product.retail_price %></td></tr>
                    <tr><th>마진율</th><td><%= product.fee_rate %></td></tr>
                    <tr><th>노출수</th><td><%= product.exposes? product.exposes:'0'  %></td></tr>
                    <tr><th>좋아요수</th><td><%= product.likes? product.likes: '0' %></td></tr>
                    <tr><th>주문수</th><td><%= product.orders? product.orders : '0' %></td></tr>
                    <tr><th>성별</th><td>
                              <%= gender %> 
                    </td></tr>
                      <tr><th>연령대</th><td>  
                       
                              <%=age %> 
                      </td></tr>
                      <tr><th>금액대</th><td>
                              <%=price %> 
                      </td></tr>
                    </table>      
                    <button style="margin: 5% 40%;" type="button" class="btn btn-primary" onclick="location.href='/admin/product/edit/<%= product.id %>';">수정하기</button>
            </div>
          </div>
  <script>
      
   </script>
</body>
</html>
